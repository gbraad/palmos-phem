<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/reset_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_title"
            android:textSize="@dimen/page_title_size"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_separator_height"
            android:background="@color/android_green" />

        <TextView
            android:id="@+id/soft_reset_blurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soft_reset_blurb"
            android:textSize="@dimen/general_text_size" />

        <Button
            android:id="@+id/soft_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soft_reset_butn_txt" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/normal_separator_height"
            android:background="@color/android_green" />

        <TextView
            android:id="@+id/noext_reset_blurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noext_reset_blurb"
            android:textSize="@dimen/general_text_size" />

        <Button
            android:id="@+id/noext_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noext_reset_butn_txt" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/normal_separator_height"
            android:background="@color/android_green" />

        <TextView
            android:id="@+id/hard_reset_blurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hard_reset_blurb"
            android:textSize="@dimen/general_text_size" />

        <Button
            android:id="@+id/hard_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/warning_red"
            android:text="@string/hard_reset_butn_txt" />
    </LinearLayout>

</ScrollView>
